{
	"name": "wext-manifest-webpack-plugin",
	"version": "1.0.5",
	"description": "Webpack plugin to solve the problem of generating js file for manifest.json entry",
	"license": "MIT",
	"author": "abhijithvijayan",
	"repository": "https://github.com/abhijithvijayan/wext-manifest-webpack-plugin.git",
	"engines": {
		"node": ">=10.0.0"
	},
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"lib"
	],
	"scripts": {
		"dev": "tsc --watch",
		"build": "tsc",
		"pack:list": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
		"prepublishOnly": "yarn build",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"keywords": [
		"webextension",
		"manifest",
		"webpack",
		"plugin",
		"wext",
		"chrome",
		"firefox",
		"edge",
		"opera"
	],
	"devDependencies": {
		"@abhijithvijayan/tsconfig": "^1.1.2",
		"@types/loader-utils": "^1.1.3",
		"@types/webpack": "^4.41.10",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "^2.25.0",
		"babel-eslint": "^10.0.3",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-onepass": "2.2.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-html": "^6.0.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"prettier": "^2.0.2",
		"typescript": "^3.8.3",
		"webpack": "^4.42.1"
	}
}
